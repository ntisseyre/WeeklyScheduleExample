@using WeeklyScheduleExample
@using WeeklyScheduleExample.Models
@using WeeklyScheduleExample.App_GlobalResources

@model DayOfTheWeek

@{
	IHtmlString breaksContainerId = Html.GetBreaksId();
	IHtmlString breaksDialogId = Html.Raw("dialogFor" + breaksContainerId);
}

<div id="@breaksContainerId" class="breaksContainer" style="@Html.IsBreakContainerVisible()" onclick="javascript:ShowBreaks(this, '@breaksDialogId', '@Html.GetBreaksDialogTitle()');"></div>
<div id="@breaksDialogId" class="breaksDialog">
	@foreach (BreakControlInfo breakHours in Html.GetBreaks())
	{
		<div class="breakRow">
			<div>@breakHours.BreakControl</div>
			<div style="@breakHours.IsDeleteButtonVisible" onclick="javascript:DeleteBreak($(this));">&nbsp;</div>
		</div>
	}
</div>